<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="song_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appLogo">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="appTagline">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_alignParentRight">@+id/appLogo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/padding10</item>
    </style>

    <style name="actionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorAccentDark</item>
        <item name="android:layout_below">@+id/appLogo</item>
    </style>

    <style name="activeAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:layout_marginRight">@dimen/padding10</item>
        <item name="android:paddingLeft">@dimen/padding10</item>
        <item name="android:paddingRight">@dimen/padding10</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="inactiveAction">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/padding10</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding10</item>
        <item name="android:paddingRight">@dimen/padding10</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listViewStyle">

        <item name="android:background">@color/colorTextLight</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/padding16</item>
        <item name="android:paddingBottom">@dimen/padding16</item>
        <item name="android:paddingLeft">@dimen/padding16</item>
        <item name="android:paddingRight">@dimen/padding16</item>
        <item name="android:paddingTop">@dimen/padding16</item>
    </style>

    <style name="defaultLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="albumLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/albumtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">350dp</item>
    </style>

    <style name="largeSongTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="smallAlbumTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="playLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/colorAccentDark</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="rightPlayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding30</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_marginTop">@dimen/padding10</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/padding30</item>
    </style>

    <style name="playButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding25</item>
        <item name="android:paddingRight">@dimen/padding25</item>
    </style>

    <style name="leftPlayLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding30</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:layout_marginTop">@dimen/padding10</item>
    </style>

</resources>
